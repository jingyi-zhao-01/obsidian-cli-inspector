# Obsidian CLI Inspector Configuration

# Path to your Obsidian vault (required)
vault_path = "/path/to/your/vault"

# Database location (default: ~/.local/share/obsidian-cli-inspector/index.db)
# database_path = "~/.local/share/obsidian-cli-inspector/index.db"

# Log directory location (default: ~/.config/obsidian-cli-inspector/logs)
# log_path = "/path/to/logs"

# Directories and patterns to exclude from scanning
[exclude]
patterns = [
    ".obsidian/",
    ".git/",
    ".trash/",
    "node_modules/",
]

# Search configuration
[search]
# Default limit for search results
default_limit = 20

# Graph configuration
[graph]
# Maximum depth for graph traversal
max_depth = 3

# LLM configuration (optional)
[llm]
# API endpoint for Q&A (optional)
# api_url = "http://localhost:11434/api/generate"
# model = "llama2"
# timeout_seconds = 30
